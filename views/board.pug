extends layout

block content
  h1= title
  - let rows = Number(query.rows)
  - let cols = Number(query.cols)
  p rows is #{query.rows} and columns is #{query.cols}
  if Number.isInteger(rows) || Number.isInteger(cols)
    p There is a problem
  else if rows > 10 || rows < 1
    p Number is out of range
  else if cols > 10 || cols < 1
    p Number is out of range
  else
    table#outer
      - for(let i=0; i<4; i++){
          tr#middle
            - for(let j=0; j<5; j++){
                if j == i
                  td=1
                else if j < i
                  td= 0
                else
                  td= j-i + 1
            -}
      -}
